{% extends 'base.html.twig' %}

{% block title %}Application index{% endblock %}

{% block body %}
    <h1>Application index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Url</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for application in applications %}
            <tr>
                <td>{{ application.id }}</td>
                <td>{{ application.name }}</td>
                <td><a href="{{ application.url }}">{{ application.url }}</a></td>
                <td>
                    <a href="{{ path('app_application_show', {'id': application.id}) }}" class="btn btn-primary">show</a>
                    <a href="{{ path('app_application_edit', {'id': application.id}) }}" class="btn btn-primary" >edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_application_new') }}" class="btn btn-primary">Create new</a>
{% endblock %}
